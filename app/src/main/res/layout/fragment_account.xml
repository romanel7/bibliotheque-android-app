<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".ui.fragments.AccountFragment">

    <!-- ============================================ -->
    <!-- SCROLLVIEW PRINCIPAL AVEC CONTENU DU COMPTE -->
    <!-- ============================================ -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="64dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="100dp">

            <!-- ============================================ -->
            <!-- SECTION PROFIL : Photo + Statistiques       -->
            <!-- ============================================ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <!-- Photo de profil circulaire -->
                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Photo de profil" />

                <!-- Conteneur : Nom utilisateur + Statistiques (Livres/Lus/Ã€ lire) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <!-- Nom d'utilisateur -->
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NomUtilisateur"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor1"
                        android:layout_marginBottom="12dp" />

                    <!-- Grille de statistiques : 3 colonnes (Livres/Lus/Ã€ lire) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <!-- Colonne 1 : Nombre total de livres -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/books_add_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/textColor1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Livre"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor2"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Colonne 2 : Livres lus -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/books_read_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/textColor1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lus"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor2"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Colonne 3 : Livres Ã  lire -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/books_to_read_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/textColor1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ã€ lire"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor2"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ============================================ -->
            <!-- SECTION NIVEAU ET PROGRESSION               -->
            <!-- ============================================ -->
            <LinearLayout
                android:id="@+id/badges_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_background_light"
                android:padding="12dp">

                <!-- Nom du niveau actuel (ex: DÃ©butant, Bibliophile...) -->
                <TextView
                    android:id="@+id/level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DÃ©butant"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorAccent"
                    android:layout_marginBottom="12dp"
                    tools:text="Bibliophile"/>

                <!-- Barre de progression vers le prochain niveau -->
                <ProgressBar
                    android:id="@+id/level_progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="?attr/colorAccent"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="8dp"/>

                <!-- Texte descriptif de la progression (ex: "5/10 livres lus...") -->
                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/1 livre lu pour passer au niveau 'Novice' !"
                    android:textSize="12sp"
                    android:textColor="?attr/textColor2"
                    tools:text="5/10 livres lus pour passer au niveau 'Expert' !"/>
            </LinearLayout>

            <!-- ============================================ -->
            <!-- CARTE CLIQUABLE : PARAMÃˆTRES                -->
            <!-- ============================================ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:backgroundTint="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <!-- IcÃ´ne paramÃ¨tres -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:contentDescription="IcÃ´ne paramÃ¨tres"
                        app:tint="?attr/textColor1"/>

                    <!-- Texte "GÃ©rer les ParamÃ¨tres" -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="GÃ©rer les ParamÃ¨tres"
                        android:textSize="16sp"
                        android:textColor="?attr/textColor1"
                        android:textStyle="bold"/>

                    <!-- FlÃ¨che indiquant que c'est cliquable -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="20sp"
                        android:textColor="?attr/textColor2"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ligne de sÃ©paration -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="20dp" />

            <!-- ============================================ -->
            <!-- SECTION STATISTIQUES                        -->
            <!-- ============================================ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistiques"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/textColor1"
                android:layout_marginBottom="16dp" />

            <!-- ============================================ -->
            <!-- CARTE : AUTEUR PRÃ‰FÃ‰RÃ‰                      -->
            <!-- ============================================ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Titre de la carte -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœï¸ Auteur prÃ©fÃ©rÃ©"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor1"
                        android:layout_marginBottom="8dp"/>

                    <!-- Nom de l'auteur prÃ©fÃ©rÃ© (calculÃ© dynamiquement) -->
                    <TextView
                        android:id="@+id/favorite_auteur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personne pour l'instant :)"
                        android:textSize="18sp"
                        android:textColor="?attr/textColor1"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ============================================ -->
            <!-- CARTE : CATÃ‰GORIE PRÃ‰FÃ‰RÃ‰E                  -->
            <!-- ============================================ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Titre de la carte -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š CatÃ©gorie prÃ©fÃ©rÃ©e"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor1"
                        android:layout_marginBottom="8dp"/>

                    <!-- Nom de la catÃ©gorie prÃ©fÃ©rÃ©e (calculÃ©e dynamiquement) -->
                    <TextView
                        android:id="@+id/favorite_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aucune pour l'instant"
                        android:textSize="18sp"
                        android:textColor="?attr/textColor1"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ============================================ -->
            <!-- SECTION : LISTE DES BADGES                  -->
            <!-- ============================================ -->
            <!-- Titre de la section badges -->
            <TextView
                android:id="@+id/titre_badges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes Badges"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/textColor1"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- RecyclerView affichant tous les badges (obtenus et Ã  dÃ©bloquer) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_badges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="80dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

        </LinearLayout>
    </ScrollView>

    <!-- ============================================ -->
    <!-- BARRE DE NAVIGATION EN BAS DE L'Ã‰CRAN       -->
    <!-- ============================================ -->
    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>