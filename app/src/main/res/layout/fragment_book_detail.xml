<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- ScrollView avec le contenu -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="64dp">

            <!-- En-tÃªte avec image et titre -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/backgroundColor"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/imageBookCover"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:elevation="8dp"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/textBookTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor1"
                        android:gravity="center"
                        tools:text="Le Petit Prince" />

                    <TextView
                        android:id="@+id/textBookAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="?attr/textColor2"
                        android:gravity="center"
                        tools:text="par Antoine de Saint-ExupÃ©ry" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Statut et Note -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        tools:text="âœ“ Lu" />

                    <TextView
                        android:id="@+id/textRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        tools:text="â˜… 4.5/5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--      RÃ©sumÃ© IA - Cliquable pour gÃ©nÃ©rer     -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAiSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¤– RÃ©sumÃ© gÃ©nÃ©rÃ© par l'IA"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textColor1" />

                        <ProgressBar
                            android:id="@+id/progressSummary"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Texte d'invitation Ã  cliquer -->
                    <TextView
                        android:id="@+id/textSummaryPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/textColor2"
                        android:lineSpacingExtra="4dp"
                        android:text="ðŸ“– Appuyez ici pour gÃ©nÃ©rer un rÃ©sumÃ© intelligent de ce livre"
                        android:gravity="center"
                        android:padding="16dp"
                        android:textStyle="italic" />

                    <!-- RÃ©sumÃ© gÃ©nÃ©rÃ© (cachÃ© au dÃ©but) -->
                    <TextView
                        android:id="@+id/textAiSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/textColor2"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Informations -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informations"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor1"
                        android:layout_marginBottom="12dp" />

                    <!-- ISBN -->
                    <LinearLayout
                        android:id="@+id/layoutIsbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="ISBN"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2" />

                        <TextView
                            android:id="@+id/textIsbn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor1"
                            tools:text="978-0-06-112008-4" />

                    </LinearLayout>

                    <!-- Ã‰diteur -->
                    <LinearLayout
                        android:id="@+id/layoutPublisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Ã‰diteur"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2" />

                        <TextView
                            android:id="@+id/textPublisher"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor1"
                            tools:text="Gallimard" />

                    </LinearLayout>

                    <!-- Date de publication -->
                    <LinearLayout
                        android:id="@+id/layoutPublishDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Publication"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2" />

                        <TextView
                            android:id="@+id/textPublishDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor1"
                            tools:text="1943" />

                    </LinearLayout>

                    <!-- Nombre de pages -->
                    <LinearLayout
                        android:id="@+id/layoutPageCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Pages"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2" />

                        <TextView
                            android:id="@+id/textPageCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor1"
                            tools:text="324 pages" />

                    </LinearLayout>

                    <!-- Langue -->
                    <LinearLayout
                        android:id="@+id/layoutLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Langue"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2" />

                        <TextView
                            android:id="@+id/textLanguage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor1"
                            tools:text="FranÃ§ais" />

                    </LinearLayout>

                    <!-- CatÃ©gories -->
                    <LinearLayout
                        android:id="@+id/layoutCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="CatÃ©gories"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupCategories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleLine="false" />

                    </LinearLayout>

                    <!-- Date d'ajout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="AjoutÃ© le"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor2" />

                        <TextView
                            android:id="@+id/textDateAjout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor1"
                            tools:text="17 novembre 2025" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notes personnelles -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notes personnelles"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/textColor2"
                        android:lineSpacingExtra="4dp"
                        tools:text="Un magnifique conte philosophique sur l'importance des relations humaines et l'essence des choses." />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Boutons Modifier et Supprimer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Modifier"
                    android:textSize="16sp"
                    android:backgroundTint="#B8E6D5"
                    android:textColor="#2D5F4C"
                    app:cornerRadius="12dp"
                    android:drawableStart="@android:drawable/ic_menu_edit"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Supprimer"
                    android:textSize="16sp"
                    android:backgroundTint="#FFCDD2"
                    android:textColor="#C62828"
                    app:cornerRadius="12dp"
                    android:drawableStart="@android:drawable/ic_menu_delete"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- âœ• Bouton fermer (AU-DESSUS du ScrollView) -->
    <TextView
        android:id="@+id/buttonClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="âœ•"
        android:textColor="?attr/textColor1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/backgroundColor"
        android:elevation="10dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>