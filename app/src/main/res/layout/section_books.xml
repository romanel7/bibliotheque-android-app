<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <!-- Titre de la section -->
    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En cours de lecture"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/textColor1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Liste horizontale des livres -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Ã‰tat vide (NOUVEAU - Ajoute ce bloc) -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:background="@drawable/rounded_edittext"
        android:visibility="gone">

        <TextView
            android:id="@+id/empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucun livre pour le moment"
            android:textSize="16sp"
            android:textColor="?attr/textColor2"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>